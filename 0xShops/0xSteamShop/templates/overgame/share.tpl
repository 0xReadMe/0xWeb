<div class="module-row row01">
  <div class="column left"> 
    
    <!--   PRICE CHANGE MODULE   -->
    <div class="module price-change slide-module">
      <div class="module-head">
        <h3 class="module-title icon06">Предзаказ</h3>
        <ul class="slider-controls">
          <li><a id="ps-prev-arrow" class="prev-arrow" href="javascript:void(0)">Назад</a></li>
          <li><a id="ps-next-arrow" class="next-arrow" href="javascript:void(0)">Вперед</a></li>
        </ul>
      </div>
      <div class="module-content">
        <div id="ps-slider" class="slick-initialized slick-slider">
          <div aria-live="polite" class="slick-list draggable" tabindex="0">
            <div class="slick-track price-change-list">
        	  	{custom category="20" aviable="global" template="share_item" from="0" cache="no"}
            </div>
          </div>
        </div>
      </div>
    </div>
    <!--   END PRICE CHANGE MODULE   --> 
    
  </div>
  <div class="column right"> 
    
    <!--   VK GROUP MODULE   -->
    <div class="module action slide-module">
      <div class="module-head">
        <h3 class="module-title icon07">Акции и скидки</h3>
        <ul class="slider-controls">
          <li><a id="as-prev-arrow" class="prev-arrow" href="javascript:void(0)">Назад</a></li>
          <li><a id="as-next-arrow" class="next-arrow" href="javascript:void(0)">Вперед</a></li>
        </ul>
        <div class="readmore"><a href="/catalogs">Все</a></div>
      </div>
      <div class="module-content">
        <div id="as-slider" class="slick-initialized slick-slider">
          <div aria-live="polite" class="slick-list draggable" tabindex="0">
            <div class="slick-track" style="opacity: 1; width: 498px;">
              <div class="slide slick-slide slick-active" data-slick-index="0" aria-hidden="false" style="width: 498px; position: relative; left: 0px; top: 0px; z-index: 900; opacity: 1;">
                <div class="action-list">
        	  	{custom category="12" aviable="global" template="share_item" from="0" cache="no"}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!--   END PRICE CHANGE MODULE   --> 
    
  </div>
</div>